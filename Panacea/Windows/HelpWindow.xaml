                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF050505" Offset="0.797"/>
                    <GradientStop Color="#FF0A0909" Offset="0.477"/>
                    <GradientStop Color="#FF131212" Offset="0.313"/>
                    <GradientStop Color="#FF111111" Offset="0.143"/>
